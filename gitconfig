[user]
	name = Michael Hinrichs
	email = michaelghinrichs@gmail.com
	username = michaelghinrichs
[alias]
  fom = fetch origin master
	com = checkout master
	co = checkout
  ci = commit -v
  st = status
  br = branch
  df = diff
  pl = pull origin HEAD
  plm = pull origin master
  ph = push origin HEAD
  ad = add -p
  s = stash
  sp = stash pop
  rb = rebase origin/master
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  lg = log --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	tree = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  suir = submodule update --init --recursive
	pristine = !git reset --hard && git clean -df
[push]
	default = current
[core]
	editor = nvim
[color]
  ui = auto
[branch "master"]
  remote = origin
  merge = refs/heads/master
