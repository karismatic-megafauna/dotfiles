[user]
	name = Michael Hinrichs
	email = michaelghinrichs@gmail.com
	username = michaelghinrichs
[alias]
  fom = fetch origin master
	com = checkout master
	co = checkout
  ci = commit
  st = status
  br = branch
  df = diff
  pl = pull origin HEAD
  plm = pull origin master
  ph = push origin HEAD
  ad = add -p
  s = stash
  sp = stash pop
  rb = rebase origin/master
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  lg = log --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	tree = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  suir = submodule update --init --recursive
[push]
	default = current
[core]
	editor = vim
[color]
  ui = auto
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green
  whitespace = red reverse
[color "status"]
  added = green bold
  changed = blue bold
  untracked = red bold
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[branch "master"]
  remote = origin
  merge = refs/heads/master
