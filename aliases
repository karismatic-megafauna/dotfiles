###########
# aliases #
###########

# general
alias cp='cp -iv'
alias mkdir='mkdir -v'
alias ls='ls -G'
alias mv='mv -iv'
alias ln='ln -v'
alias rm='rm'
alias p='ps -a'
alias back='cd -'
alias path='pretty_path'
alias e="$EDITOR"
alias v="$VISUAL"
alias sz="source ~/.zshrc"
alias tree="tree -CI node_modules"
alias t="tree -CI node_modules"

# Tmux
alias tmux="tmux -2"

# rcm
alias rcup='rcup -v'
alias rcdn='rcdn -v'
alias mkrc='mkrc -v'
